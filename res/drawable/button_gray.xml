<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/button_gray_light"
          android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#989898" />
            <stroke
                    android:width="1dp"
                    android:color="#444444" />
            <corners
                    android:radius="2dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/button_gray_disable"
          android:state_enabled="false" >
        <shape>
            <solid
                    android:color="#989898" />
            <stroke
                    android:width="1dp"
                    android:color="#444444" />
            <corners
                    android:radius="2dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/button_gray_drak"></item>

</selector>